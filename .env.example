# Server Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
ENVIRONMENT=development

# Spotify OAuth Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/auth/callback

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Encryption Configuration (will be generated if not set)
CRYPTO_KEY=your_encryption_key_for_token_storage

# API Key for legacy write operations
WRITE_API_KEY=demo_write_key_123

# DynamoDB Configuration
DYNAMODB_TABLE=playlists
DYNAMODB_USERS_TABLE=users
DYNAMODB_REGION=us-east-1
# DYNAMODB_ENDPOINT_URL=http://localhost:8000  # Uncomment for local testing

# Redis Configuration (optional, used for caching and OAuth state)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO

# Production Features
RATE_LIMIT_PER_MINUTE=60

