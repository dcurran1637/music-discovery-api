# Music Discovery API - Environment Variables
# Copy to .env and fill in your values. NEVER commit .env!

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/music_discovery

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Spotify API - Get from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Security - Generate with: openssl rand -hex 32
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CRYPTO_KEY=your_encryption_key_for_token_storage
WRITE_API_KEY=demo_write_key_123

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8000
RATE_LIMIT_PER_MINUTE=60
PYTHON_VERSION=3.12.0


